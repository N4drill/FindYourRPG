<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/navigaton_header">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:civ_circle_background_color="@android:color/white"
        android:src="@drawable/face_placeholder"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"
        android:text="Button" />

    <TextView
        android:id="@+id/nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_image"
        android:layout_alignStart="@+id/nav_image"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_name_border"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="Paweł Głuszczak" />
</RelativeLayout>